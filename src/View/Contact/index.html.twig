{% extends 'layout.html.twig' %}

{% block content %}

    <link rel="stylesheet" href="../assets/css/contact.css">

    <h1>Hello Wilder ! - Contact</h1>

    <main>
            <form action="/contact/index" method="post">
                <div class="form-group">
                    <label for="fname">Nom:</label>
                    <input type="text" class="form-control" id="fname" placeholder="Votre prénom">
                </div>
                <div class="form-group">
                    <label for="lname">Nom:</label>
                    <input type="text" class="form-control" id="lname" placeholder="Votre nom">
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Votre email">
                </div>
                <div class="form-group">
                    <label for="phone">Téléphone:</label>
                    <input type="tel" class="form-control" id="phone" placeholder="Votre numéro de téléphone">
                </div>
                <div class="form-group">
                    <label for="topic">Sujet:</label>
                        <select class="form-control" id="topic" name="topic">
                            <option value="volvo">Sujet 1</option>
                            <option value="saab">Sujet 2</option>
                            <option value="mercedes">Sujet 3</option>
                        </select>
                </div>
                <div class="form-group">
                    <label for="comment">Comment:</label>
                        <textarea class="form-control" rows="5" id="comment"></textarea>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">J'ai lu et accepte la Politique de confidentialité.</label>
                </div>
                <br>
                <div class="button">
                <button type="reset" class="btn">Annuler</button>
                    <button type="submit" class="btn">Envoyer</button>
                </div>
            </form>
    </main>
{% endblock %}