{% extends 'layout.html.twig' %}

{% block title %}
    Edition exposition
{% endblock %}

{% block content %}

    <section class="section edit-exhibition-admin container">

        <h1 class="title-section text-center mb-5">Editer</h1>
        <a href="/admin/exhibition" class="btn btn-primary mb-5">Retour</a>
        {% if errors is defined  %}
            {% for error in errors %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endfor %}
        {% endif %}
        {% for i in 0..errors_files | length - 1 %}
            {% for key, value in errors_files[i] %}
                <div class="alert alert-danger">
                    <span class="mr-5">{{ key ~ ': ' }}</span> {{ value | upper }}
                </div>
            {% endfor %}
        {% endfor %}

        <form action="" method="post" enctype="multipart/form-data" class="p-4">
            <div class="row">
                <div class="col text-center">
                    <img src="/assets/images/exhibition/{{ exhibition.image }}" alt="{{ exhibition.image }}">
                    <div class="custom-file my-4">
                        <input type="file" class="custom-file-input" id="image" name="image">
                        <label class="custom-file-label" for="image">Choisir une image</label>
                    </div>
                </div>
            </div>
            <div class="form-row my-4">
                <div class="form-group col-md-6">
                    <label for="title">Th√®me de l'exposition</label>
                    <input class="form-control" type="text" name="title" id="title" value="{{ exhibition.title }}">
                </div>
            </div>
            <div class="form-row my-4">
                <div class="form-group">
                    <label for="detail">Description</label>
                    <textarea class="form-control" name="detail" id="detail" cols="150" rows="10">{{ exhibition.detail }}</textarea>
                </div>
            </div>
            <div class="form-row my-4">
                <button class="btn btn-primary ml-auto">Enregistrer</button>
            </div>
        </form>

    </section>

{% endblock %}